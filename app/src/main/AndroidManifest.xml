<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tracktrack">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/tt"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/tt"
        android:supportsRtl="true"
        android:theme="@style/Theme.TrackTrack">
        <activity
            android:name=".setUpPlayers"
            android:exported="false" />
        <activity
            android:name=".setUpTeamsA"
            android:exported="false" />
        <activity
            android:name=".ui.login.setUpTeamsActivity"
            android:exported="false"
            android:label="@string/title_activity_set_up_teams" />
        <activity
            android:name=".SplashScreen"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>